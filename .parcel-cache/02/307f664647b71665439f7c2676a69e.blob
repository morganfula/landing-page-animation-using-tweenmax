@import url('https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
  font-family: 'Nunito Sans', sans-serif;
}

.blocks {
  display: flex;
  font-size: 140px;
  color: #8516e4;
  text-shadow: 1pxs 2px 8px #125cae;
}

.circle-shape {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 800px;
  height: 800px;
  border: 1px solid rgba(187, 19, 173, 0.7);
  border-radius: 100%;
}

.circle-shape-2 {
  position: absolute;
  top: 64%;
  left: 80%;
  transform: translate(-50%, -50%);
  width: 240px;
  height: 240px;
  background: radial-gradient(
    circle at 65% 15%,
    #fbe1f9 1px,
    #768ef9 3%,
    #eb22a5 60%,
    #b461f0 100%
  );
  border-radius: 100%;
}

.circle-shape-3 {
  position: absolute;
  top: 30%;
  left: 20%;
  transform: translate(-50%, -50%);
  width: 140px;
  height: 140px;
  background: radial-gradient(
    circle at 65% 15%,
    #fbe1f9 1px,
    #768ef9 3%,
    #d785e6 40%,
    #5ab7f6 100%
  );
  border-radius: 100%;
  z-index: 2;
}

.wrapper-img {
  overflow: hidden;
  position: absolute;
  top: 35% !important;
  right: 18%;
  width: 30%;
  height: 90vh;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.box {
  background: #000;
  opacity: 1;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 0;
}

.site-logo {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  font-family: 'Mak';
  font-size: 24px;
  line-height: 100px;
  text-transform: uppercase;
  color: #eb22a5;
}

.navbar {
  position: fixed;
  width: 100%;
  height: 100px;
  padding: 0 40px;
  display: flex;
  justify-content: space-between;
  font-family: 'Nunito Sans', sans-serif;
  font-weight: bolder;
  text-transform: uppercase;
  line-height: 100px;
  color: #eb22a5;
}

.site-menu {
  display: flex;
}

.menu-item {
  margin-left: 60px;
}

.showreel {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 40px;
  font-family: Arial, Helvetica, sans-serif !important;
  text-transform: uppercase;
  color: #eb22a5;
  text-decoration: underline;
}

@media (max-width: 900px) {
  .navbar {
    display: none;
  }
}
